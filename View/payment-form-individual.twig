
    <form action="" id="individual-form" class="individual-form">
        <div id="payment-individual">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        
                        <div class="form-group clearfix">
                            <label for="form-name" class="col-md-3 control-label">Nombre:</label>
                            <div class=" col-md-9">
                                <input type="text" class="form-control" id="form-name" name="name" placeholder="Nombre" value="" tabindex="1">
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="form-surname" class=" col-md-3 control-label">Apellidos:</label>
                            <div class="col-md-9">
                                <input type="text" class="form-control" id="form-surname" name="surname" value="" placeholder="Apellidos" tabindex="2">
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="form-email" class="col-md-3 control-label">Correo Electrónico:</label>
                            <div class="col-md-9">
                                <input type="email" class="form-control" id="form-email" name="email" placeholder="correo@electronico.es" value="" tabindex="3">
                            </div>
                        </div>
                        
                        <div class="form-group ">
                            <label for="nif" class=" col-md-3 control-label">NIF/NIE:</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="nif" name="nif" value="" placeholder="" tabindex="4">
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="civil" class=" col-md-3 control-label">Estado civil:</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="civil" name="civil" value="" placeholder="" tabindex="5">
                            </div>
                        </div>


                        <div class="form-group ">
                            <label for="phone" class=" col-md-3 control-label">Teléfono:</label>
                            <div class="col-md-3">
                                <input type="text" class="form-control" id="phone" name="phone" value="" placeholder="" tabindex="6">
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="nationality" class=" col-md-2 control-label">Nacionalidad:</label>
                            <div class="col-md-4">
                                <select class="form-control" name="nationality" tabindex="7">
                                  <option>...</option>
                                  <option>2</option>
                                  <option>3</option>
                                  <option>4</option>
                                  <option>5</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group ">
                            <label for="address" class=" col-md-3 control-label">Calle:</label>
                            <div class="col-md-6">
                                <input type="text" class="form-control" id="address" name="address" value="" placeholder="" tabindex="8">
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="addressNum" class=" col-md-1 control-label">Número:</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="addressNum" name="addressNum" value="" placeholder="" tabindex="9">
                            </div>
                        </div>


                        <div class="form-group ">
                            <label for="postcode" class=" col-md-2 col-md-offset-3 control-label">Código postal:</label>
                            <div class="col-md-2">
                                <input type="text" class="form-control" id="postcode" name="postcode" value="" placeholder="" tabindex="10">
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="city" class=" col-md-1 control-label">Localidad:</label>
                            <div class="col-md-4">
                                <input type="text" class="form-control" id="city" name="city" value="" placeholder="" tabindex="11">
                            </div>
                        </div>


                        <div class="form-group ">
                            <label for="province" class=" col-md-2 col-md-offset-3 control-label">Provincia:</label>
                            <div class="col-md-3">
                                <select class="form-control" name="province" tabindex="12">
                                    <option>...</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                            </select>
                            </div>
                        </div>

                        <div class="form-group clearfix">
                            <label for="country" class=" col-md-1 control-label">País:</label>
                            <div class="col-md-3">
                                <select class="form-control" name="country" tabindex="13">
                                  <option>...</option>
                                  <option>2</option>
                                  <option>3</option>
                                  <option>4</option>
                                  <option>5</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <button class="btn btn-orange pull-right">Seguir adelante >></button>
                        </div>

                    </div>
                </div>
            </div>
        </div>
