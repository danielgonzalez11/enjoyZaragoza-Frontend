<script>
//<![CDATA[
  window.currencySymbol = "â‚¬";
  window.locale = "es";
  
  $.validator.setDefaults({
    highlight: function(e) {
      $(e).closest('.form-group, .checkbox, .radio').addClass('has-error');
    },
    unhighlight: function(e) {
      $(e).closest('.form-group, .checkbox, .radio').removeClass('has-error');
    },
    errorElement: 'span',
    errorClass: 'help-block',
    errorPlacement: function(error, e) {
      if (e.parent('.input-group').length || e.prop('type') === 'checkbox' || e.prop('type') === 'radio') {
        error.insertAfter(e.parent());
      } else {
        error.insertAfter(e);
      }
    }
  });
//]]>
</script>
